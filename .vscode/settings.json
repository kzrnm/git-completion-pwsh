{
    "powershell.powerShellDefaultVersion": "Windows PowerShell (x64)",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "color": "terminal.ansiMagenta",
            "args": [
                "-NoExit",
                "-Command",
                "$SkipHeavyTest=$false; Import-Module ./src/git-completion.psd1 -Force"
            ],
            "env": {
                "GIT_COMPLETION_SHOW_ALL_COMMANDS": "1"
            },
            "icon": "terminal-powershell"
        },
        "WindowsPowerShell": {
            "path": "powershell.exe",
            "args": [
                "-NoExit",
                "-Command",
                "Set-PSReadLineKeyHandler -Key Tab -Function MenuComplete; Import-Module ./src/git-completion.psd1 -Force"
            ],
            "env": {
                "GIT_COMPLETION_SHOW_ALL_COMMANDS": "1"
            },
            "color": "terminal.ansiCyan",
            "icon": "terminal-powershell"
        },
        "Ubuntu (WSL)": {
            "path": "wsl.exe",
            "args": [
                "--exec",
                "pwsh",
                "-NoExit",
                "-Command",
                "Set-PSReadLineKeyHandler -Key Tab -Function MenuComplete; Import-Module ./src/git-completion.psd1 -Force"
            ],
            "color": "terminal.ansiGreen",
            "icon": "terminal-ubuntu"
        }
    }
}