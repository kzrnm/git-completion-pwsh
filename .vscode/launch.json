{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Run Cuttent Pester Test",
            "type": "PowerShell",
            "request": "launch",
            "script": "$SkipHeavyTest=$false; Invoke-Pester '${file}'"
        },
        {
            "name": "PowerShell: Run Pester Light Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "$SkipHeavyTest=$true; Invoke-Pester",
            "createTemporaryIntegratedConsole": true,
            "attachDotnetDebugger": true
        },
        {
            "name": "PowerShell: Run Pester All Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "$SkipHeavyTest=$false; Invoke-Pester",
            "createTemporaryIntegratedConsole": true,
            "attachDotnetDebugger": true
        }
    ]
}